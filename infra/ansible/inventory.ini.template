[k3s_servers]
k3s-server ansible_host=${K3S_SERVER_IP} ansible_user=ubuntu ansible_ssh_private_key_file=${TF_VAR_identity_file}

[k3s_workers]
%{ for i, ip in K3S_WORKER_IPS ~}
k3s-worker-${i+1} ansible_host=${ip} ansible_user=ubuntu ansible_ssh_private_key_file=${TF_VAR_identity_file} ansible_ssh_common_args='-o ProxyJump=ubuntu@${K3S_SERVER_IP} -o StrictHostKeyChecking=no'
%{ endfor ~}

[all:vars]
ansible_ssh_common_args='-o StrictHostKeyChecking=no'