apiVersion: v1
kind: Secret
metadata:
  name: notification-secrets
type: Opaque
stringData:
  # Gmail SMTP Configuration
  # 1. Enable 2-Step Verification: https://myaccount.google.com/security
  # 2. Create App Password: https://myaccount.google.com/apppasswords
  # 3. Copy the 16-character password and paste it below
  
  SMTP_USER: your-email@gmail.com              # Your Gmail address
  SMTP_PASS: your16charapppassword             # Google App Password (NOT your Gmail password!)
  SMTP_FROM: your-email@gmail.com              # Sender email address
  ADMIN_EMAIL: admin-email@example.com         # Admin notification email
